{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/market#",
  "title": "Market",
  "description": "Specific pairing (market) on exchange.",
  "fa-icon": "layer-group",
  "type": "object",
  "required": [],
  "properties": {
    "id": {
      "type": "string"
    },
    "exchange": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "minLength": 2,
      "maxLength": 2,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "title": "Asset Type",
            "type": "string"
          },
          "asset": {
            "title": "Asset ID",
            "type": "string"
          }
        }
      }
    },
    "start_date": {
      "title": "Start Date",
      "type": "string",
      "format": "date"
    }
  }
}